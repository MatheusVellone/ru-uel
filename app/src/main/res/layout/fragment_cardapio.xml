<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.felintovellone.Cardapio.Cardaprio$PlaceholderFragment">

    <TextView
        android:id="@+id/mistura1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/arroz"
        android:layout_alignLeft="@+id/arroz"
        android:layout_alignStart="@+id/arroz" />

    <TextView
        android:id="@+id/mistura2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/mistura1"
        android:layout_alignLeft="@+id/mistura1"
        android:layout_alignStart="@+id/mistura1" />

    <TextView
        android:id="@+id/salada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/mistura2"
        android:layout_alignLeft="@+id/mistura2"
        android:layout_alignStart="@+id/mistura2" />

    <TextView
        android:id="@+id/sobremesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/salada"
        android:layout_alignLeft="@+id/salada"
        android:layout_alignStart="@+id/salada" />

    <TextView
        android:id="@+id/suco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/sobremesa"
        android:layout_alignLeft="@+id/sobremesa"
        android:layout_alignStart="@+id/sobremesa" />

    <TextView
        android:id="@+id/arroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/dia_mes"
        android:layout_below="@+id/dia_mes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dia_mes"
        android:textSize="21sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
